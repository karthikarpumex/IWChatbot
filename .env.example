# ========================================
# IronWorker Chatbot - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values

# ============ REQUIRED SETTINGS ============

# OpenAI API Key (REQUIRED)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ============ CLICKHOUSE (REQUIRED) ============
# NOTE: ClickHouse should be running SEPARATELY on your machine
# This application connects to your existing ClickHouse instance

# Connection settings
CLICKHOUSE_HOST=host.docker.internal  # For Docker on Windows/Mac
# CLICKHOUSE_HOST=172.17.0.1          # For Docker on Linux
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-clickhouse-password
CLICKHOUSE_DATABASE=iw_dev

# ============ POSTGRESQL (AUTO-CONFIGURED) ============
# These are managed by docker-compose - no changes needed

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=chat_history
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ============ LANGFUSE (OPTIONAL) ============
# Only needed if you want monitoring/tracing
# Leave empty if not using Langfuse

LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=http://host.docker.internal:3001

# ============ LOGGING (AUTO-CONFIGURED) ============
# Loki logging - enabled by default

ENABLE_LOKI_LOGGING=true
LOKI_URL=http://loki:3100/loki/api/v1/push
ENVIRONMENT=dev
